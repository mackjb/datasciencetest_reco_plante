{
  "name": "PlantVillage GPU Training (RTX 5070)",
  "build": {
    "dockerfile": "Dockerfile.gpu",
    "context": ".",
    "args": {}
  },
  
  // Configuration GPU - CRITIQUE pour RTX 5070
  "runArgs": [
    "--gpus=all",
    "--ipc=host",
    "--ulimit", "memlock=-1",
    "--ulimit", "stack=67108864"
  ],
  
  // Variables d'environnement GPU
  "containerEnv": {
    "TF_FORCE_GPU_ALLOW_GROWTH": "true",
    "CUDA_CACHE_MAXSIZE": "2147483648",
    "CUDA_FORCE_PTX_JIT": "1",
    "CUDA_MODULE_LOADING": "LAZY",
    "TF_CPP_MIN_LOG_LEVEL": "2",
    "NVIDIA_VISIBLE_DEVICES": "all",
    "NVIDIA_DRIVER_CAPABILITIES": "compute,utility"
  },
  
  // Monter le workspace
  "workspaceFolder": "/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind",
  
  // Ports expos√©s (Jupyter, TensorBoard, etc.)
  "forwardPorts": [8888, 6006],
  "portsAttributes": {
    "8888": {
      "label": "Jupyter Lab",
      "onAutoForward": "notify"
    },
    "6006": {
      "label": "TensorBoard",
      "onAutoForward": "notify"
    }
  },
  
  // Extensions VSCode recommand√©es
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-keymap",
        "ms-toolsai.vscode-jupyter-cell-tags",
        "ms-toolsai.vscode-jupyter-slideshow",
        "ms-azuretools.vscode-docker",
        "eamodio.gitlens"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/opt/conda/envs/gpu-env/bin/python",
        "python.terminal.activateEnvironment": true,
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash",
            "args": ["-l"]
          }
        }
      }
    }
  },
  
  // Commandes post-cr√©ation
  "postCreateCommand": "echo 'üöÄ GPU Container ready! Run: python test_gpu.py'",
  
  // Features additionnels
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  
  // Utilisateur
  "remoteUser": "root",
  
  // Monter le cache conda et pip pour acc√©l√©rer les rebuilds
  "mounts": [
    "source=conda-cache,target=/opt/conda/pkgs,type=volume",
    "source=pip-cache,target=/root/.cache/pip,type=volume"
  ]
}
